{
	"name": "webassembly-ide",
	"publisher": "samual",
	"displayName": "WebAssembly IDE",
	"description": "IDE features for WebAssembly and WebAssembly Text Format",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.93.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:wat"
	],
	"main": "extension.js",
	"contributes": {
		"commands": [
			{
				"command": "webassembly-ide.debug-print-tokens",
				"title": "WebAssembly IDE: Debug Print Tokens"
			}
		],
		"semanticTokenScopes": [
			{
				"language": "wat",
				"scopes": {
					"stringEscape": [
						"constant.character.escape"
					]
				}
			}
		]
	},
	"dependencies": {
		"@samual/wasm-utils": "workspace:*"
	},
	"devDependencies": {
		"@babel/preset-typescript": "^7.25.7",
		"@rollup/plugin-babel": "^6.0.4",
		"@rollup/plugin-node-resolve": "^15.3.0",
		"@rollup/plugin-terser": "^0.4.4",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/node": "^22.7.4",
		"@types/vscode": "^1.93.0",
		"rollup": "^4.24.0"
	},
	"type": "module"
}
